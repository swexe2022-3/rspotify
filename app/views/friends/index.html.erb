<h1>friends list</h1>
<div>
    MY UID
    <%= session[:spotify_uid] %>
</div>

<div>
    友達を追加
    <%= form_with model: @friend do |form| %>
      <%= form.text_field :friend_uid %>
      <%= form.submit %>
    <% end %>
</div>

<div>
    友達リスト
    <% if not @friends.nil? %>
        <% @friends.each do |f| %>
            <% if User.find_by(spotify_uid: f.friend_uid)%>
                <% friend = User.find_by(spotify_uid: f.friend_uid) %>
                <%= f.friend_uid %>
                <%= friend.genre %>
                <%= friend.positive %>
                <%= friend.energy %>
                <hr>
            <% end %>
        <% end %>
    <% end %>    
</div>
